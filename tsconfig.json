{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./dist/backend",
    "baseUrl": "./backend"
  },
  "include": ["backend/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}